{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "flowtype"
  ],
  "rules": {
    "indent": [2, 2, {
        "SwitchCase": 1,
        "VariableDeclarator": 1,
        "outerIIFEBody": 1
      }
    ],
    "linebreak-style": [2, "unix"],
    "quotes": [1, "single"],
    "semi": [1, "always"],
    "no-console": 1,
    "flowtype/define-flow-type": 1,
    "flowtype/use-flow-type": 1
  }
}
